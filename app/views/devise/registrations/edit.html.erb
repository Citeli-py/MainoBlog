<div class="text-center w-50 mx-auto p-4">
  <h2 class="h3 mb-3 font-weight-normal">Altere suas informações</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "form-signin") do |f| %>

    <%= render "devise/shared/error_messages", resource: resource, class: "alert alert-danger" %>

    <div class="form-group">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-lg", placeholder:"Email", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control-lg", placeholder: "Name", required: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, class: "sr-only" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control-lg", placeholder: "Password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "sr-only" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-lg", placeholder: "Confirm Password" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, class: "sr-only" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control-lg", placeholder: "Current Password" %>
    </div>

    <%= f.submit "Update", class: "btn btn-lg btn-primary" %>

  <% end %>

  <h3 class="mt-5 mb-2">Cancel my account</h3>

  <div class="btn-group" role="group">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-lg btn-danger mr-4" %>
    <%= link_to "Back", :back, class: "btn btn-lg btn-secondary" %>
  </div>

</div>
