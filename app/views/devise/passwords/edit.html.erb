<div class="text-center w-50 mx-auto p-4">
  <h2 class="h3 mb-3 font-weight-normal">Altere sua senha</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "form-signin") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "New password" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>


    <%= f.submit "Change my password", class: "btn btn-lg btn-primary" %>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
