<div class="text-center w-50 mx-auto p-4">
  <h2 class="h3 mb-3 font-weight-normal">Esqueceu sua senha?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "form-signin") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-lg" %>
    </div>


    <%= f.submit "Send me reset password instructions", class: "btn btn-md btn-primary" %>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
