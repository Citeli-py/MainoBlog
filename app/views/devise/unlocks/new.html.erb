
<div class="text-center w-25 mx-auto p-4">
  <h2 class="h3 mb-3 font-weight-normal">Resend unlock instructions</h2>
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, class: "form-signin") do |f| %>

    <%= render "devise/shared/error_messages", resource: resource, class: "alert-danger" %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-lg", placeholder:"Email"%>

    <%= f.submit "Resend unlock instructions", class: "btn btn-lg btn-primary btn-block" %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
