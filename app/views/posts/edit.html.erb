

<div class="card p-4 m-4 mx-auto" style="width: 40%;">
    <h2 class="mx-auto mb-3">Edite seu Post</h2>

    <%= form_with(model: @post, url: post_path(@post), method: :patch) do |form| %>

        <div class="form-group mb-4">
            <label>Titulo:</label>
            <%= form.text_field :title, class: "form-control", value: @post.title%>
        </div>

        <div class="form-group mb-4">
            <label>Texto:</label>
            <%= form.text_area :body, class: "form-control", rows: "3", value: @post.body%>
        </div>

        <%= form.hidden_field :author, value: current_user.name %>

        <%= form.submit "Atualizar Post", class: "btn btn-primary" %>
        <%= link_to 'Back', posts_path %>

    <% end %>
</div>