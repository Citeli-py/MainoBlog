
<div class="card p-4 m-4 mx-auto" style="width: 40%;">
    <h2 class="mx-auto mb-3">Novo Post</h2>

    <%= form_with(model: @post, url: posts_path ) do |form| %>

        <div class="form-group mb-4">
            <label>Titulo:</label>
            <%= form.text_field :title, class: "form-control"%>
        </div>

        <div class="form-group mb-4">
            <label>Texto:</label>
            <%= form.text_area :body, class: "form-control", rows: "3"%>
        </div>

        <%= form.hidden_field :user_id, value: current_user.id %>

        <%= form.submit "Criar Post", class: "btn btn-primary" %>
        <%= link_to 'Back', posts_path %>

    <% end %>
</div>

