
<%= render 'navbar' %>

<div class="mx-auto" style="margin-top: 50px;">

    <% @posts.each do |post| %>

        <div class="card mb-4 mx-auto" style="width: 40%;">
            <div class="card-header">
                <h2><%=post.title%></h2>
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p><%=post.body%></p>
                    <footer class="blockquote-footer">
                        <cite title="Source Title"><%=post.author%></cite>
                    </footer>
                </blockquote>
            </div>
        </div>

    <% end %>

</div>
